@model OBM_Project.Models.Usuario.Usuarios

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <form asp-action="Index" asp-controller="PainelControle" style="background-color:gainsboro">
                    <h1>Login</h1>
                    <p class="text-muted"> Por favor digite seu login e senha!</p>
                    <div class="form-group">
                        <input asp-for="Login" class="form-control" placeholder="Seu login" style="width:400px" />
                    </div>
                    <div class="form-group">
                        <input type="password" asp-for="Senha" class="form-control" placeholder="Senha" style="width:400px" />
                    </div>

                    <button type="submit" class="btn btn-default">Entrar</button>
                    <div class="col-md-12">
                        <ul class="social-network social-circle">
                            <li><a href="#" class="icoFacebook" title="Facebook">Face<i class="fab fa-facebook-f"></i></a></li>
                            <li><a href="#" class="icoGoogle" title="Google +">Google<i class="fab fa-google-plus"></i></a></li>
                        </ul>
                    </div>
                </form>
                <div class="dropdown-divider"></div>
                <a asp-action="RedefinirSenha" asp-controller="Login">Esqueceu a senha?</a>
            </div>
        </div>
    </div>
</div>


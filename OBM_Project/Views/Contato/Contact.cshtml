@model OBM_Project.Models.ViewModels.ContatosViewModel

@{
    ViewData["Title"] = "Contato";
}

<table style="width:100%">
    <tr>
        <td>
            <h3>Deixe seus dados que entraremos em contato.</h3>

            <table class="table-bordered" style="background-color:gainsboro">
                <tr>
                    <td style="width:500px">
                        <div>
                            <form asp-action="Mensagem" asp-controller="Contato" style="width:320px" id="form">
                                <div class="form-group">
                                    <label for="" class="control-label">Nome</label>
                                    <input id="nome" asp-for="Contatos.Nome" class="form-control" />
                                    <span asp-validation-for="Contatos.Nome" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label for="" class="control-label">E-mail</label>
                                    <input id="email" asp-for="Contatos.Email" class="form-control" />
                                    <span asp-validation-for="Contatos.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label for="" class="control-label">Telefone</label>
                                    <input id="tel" asp-for="Contatos.Telefone" class="form-control" />
                                    <span asp-validation-for="Contatos.Telefone" class="text-danger"></span>
                                </div>
                                <label for="exampleFormControlSelect1">Área</label>
                                <select id="area" asp-for="Contatos.AreaId" asp-items="@(new SelectList(Model.Areas, "Id", "Nome"))" class="form-control">
                                    <option>selecione</option>
                                </select>
                                <span asp-validation-for="Contatos.AreaId" class="text-danger"></span>
                                <div class="form-group">
                                    <label for="" class="control-label">Assunto</label>
                                    <input id="assunto" asp-for="Contatos.Assunto" class="form-control" />
                                    <span asp-validation-for="Contatos.Assunto" class="text-danger"></span>
                                </div>
                                <label for="FormControlTextarea">Observações</label>
                                <div class="form-group">
                                    <textarea id="conteudo" asp-for="Contatos.Conteudo" placeholder="Escreve seu texto aqui!" style="height:120px; width:400px; resize:none" class="form-control"></textarea>
                                    <span asp-validation-for="Contatos.Conteudo" class="text-danger"></span>
                                    <br />
                                </div>

                            </form>

                        </div>
                        <button type="button" class="btn btn-default" onclick="Enviar()">
                            Enviar
                        </button>
                    </td>
                </tr>
            </table>
        </td>
        <td style="width:300px">
            <a asp-action="EnviarWhatsApp" asp-controller="Contato"><input type="image" src="~/images/BotaoWhatsapp.png" width="350" height="150" /></a><br />
            <br />
            <br />
            <p><b>Endereço:</b> R. Fortunata Bernardelo Menegheti, 141 - Montanhão, São Bernardo do Campo - SP, 09791-810</p>
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3652.0258667028747!2d-46.534461685615376!3d-23.746456984591333!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMjPCsDQ0JzQ3LjMiUyA0NsKwMzEnNTYuMiJX!5e0!3m2!1spt-BR!2sbr!4v1597079395635!5m2!1spt-BR!2sbr" width="400" height="250" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>

        </td>
    </tr>

</table>
<button class="hidden" id="btnPopup" data-toggle="modal" data-target="#PopupContato">

</button>
<!-- Modal Ocamento -->
<div class="modal fade" id="PopupContato" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="tituloContato">Mensagem</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.DisplayFor(modelItem => modelItem.Alertas)
            </div>
            <div class="modal-footer">
                <a asp-action="Contact" asp-controller="Contato" class="btn btn-default">Ok</a>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    @Model.JavascriptToRun

    function Enviar() {
        document.getElementById('form').submit();
    }
    function Alerta() {
        document.getElementById('btnPopup').click();
    }
    function Limpar() {
        $('#nome').empty();
        $('#email').empty();
        $('#conteudo').empty();
        $('#tel').empty();
        $('#assunto').empty();
        $('#area').empty();

    }
</script>


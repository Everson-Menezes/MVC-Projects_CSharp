@model IEnumerable<OBM_Project.Models.Orcamento.Orcamentos>

@{
    ViewData["Title"] = "OrcamentosPendentes";
}

<h2>Orcamentos Pendentes</h2>

<table class="table">
    <thead>
        <tr>
            <th width="150px" align="center">
                N° Orçamento
            </th>
            <th width="150px" align="center">
                @Html.DisplayNameFor(model => model.TipoServico)
            </th>
            <th width="150px" align="center">
                @Html.DisplayNameFor(model => model.SubTipoServico)
            </th>
            <th width="150px" align="center">
                @Html.DisplayNameFor(model => model.Necessidade)
            </th>
            <th width="300px" align="center">
                @Html.DisplayNameFor(model => model.Observacao)
            </th>
            <th width="150px" align="center">
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th width="200px">

            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoServico.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubTipoServico.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Necessidade.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Observacao)
                    </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.Valor)
                    </td>
                    <td>
                        <a asp-action="EditarOrcamento" asp-controller="Orcamento" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="DeleteOrcamento" asp-controller="Orcamento"  asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

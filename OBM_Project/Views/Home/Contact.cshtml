@{
    ViewData["Title"] = "Contacto";
}
<h3>@ViewData["Message"]</h3>

<form style="width:300px">
    <div class="form-group">
        <label for="exampleFormControlInput1">Email</label>
        <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
    </div>
    <div class="form-group">
        <label for="exampleFormControlSelect1">Área</label>
        <select class="form-control" id="exampleFormControlSelect1">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
        </select>
    </div>
    <div class="form-group">
        <label for="exampleFormControlSelect2">Assunto</label>
        <input type="text" class="form-control" id="exampleFormControlInput2" placeholder="Teste">
    </div>
    <div class="form-group" style="height:200px">
        <label for="exampleFormControlTextarea1">Escreva aqui</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Escreve seu texto aqui!" style="height:120px" ></textarea>
        <br />
        <button class="btn btn-primary" type="submit">Button</button>
    </div>

</form>
